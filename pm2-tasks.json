{
  "apps": [
    {
      "name": "robot-tasks",
      "script": "robot-tasks.js",
      "log_date_format": "YYYY-MM-DD HH",
      "max_memory_restart": "500M",
      "error_file": "logs/robot-tasks-err.log",
      "pid_file": "logs/robot-tasks.pid",
      "exec_mode": "cluster",
      "instances": 1,
      "env": {
        "NODE_ENV": "development"
      },
      "env_test": {
        "NODE_ENV": "test"
      },
      "env_release": {
        "NODE_ENV": "production"
      }
    }
  ]
}
